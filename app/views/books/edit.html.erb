<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<% if @book.errors.any? %>
<%= pluralize(@book.errors.count,"error") %>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'Show', book_path %>
<span>|</span>
<%= link_to 'Back', books_path %>
